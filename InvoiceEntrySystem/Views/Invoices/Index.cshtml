@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "List of Invoices";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.ActionLink("Supplier Name", "Index", new { sortOrder = ViewBag.NameSortParm })</th>
                    <th>@Html.ActionLink("Invoice Number", "Index", new { sortOrder = ViewBag.NumberSortParm })</th>
                    <th>@Html.ActionLink("Date Ordered", "Index", new { sortOrder = ViewBag.DateOSortParm })</th>
                    <th>@Html.ActionLink("Date Received", "Index", new { sortOrder = ViewBag.DateRSortParm })</th>
                    <th class="text-center">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.SupplierName
                        </td>
                        <td class="align-middle">
                            @item.InvoiceNumber
                        </td>
                        <td class="align-middle">
                            @item.DateOrdered.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                            @item.DateReceived.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a style="position: fixed; right: 100px; bottom: 75px;" asp-controller="Invoices" asp-action="Create" class="btn btn-success text-white">
                        <i class="bi bi-plus-circle"></i> Add New
                    </a>
                </td>
            </tr>

            </tbody>

        </table>

    </div>

</div>

